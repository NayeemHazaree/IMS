@model IEnumerable<IMS.Models.Models.OrderHeader>

<div class="border p-3" style="margin-top:65px;">
    <div class="text-center text-primary">
        <h2>Order List</h2>
    </div>
    <br />
    <hr />

    @if (Model.Count() > 0)
    {
        <table class="table table-responsive table-hover table-bordered table-striped" style="text-align:center;">
            <thead>
                <tr>
                    <th scope="col">Serial No</th>
                    <th scope="col">Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderSrl in Model)
                {
                    if (orderSrl.OrderStatus == "Pending")
                    {
                        <tr class="">
                            <td id="orh_serial_no"></td>
                            <td>@orderSrl.OrderDate.ToShortDateString()</td>
                            <td>@orderSrl.OrderStatus</td>
                            <td>
                                <div>
                                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@orderSrl.Id">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    else if (orderSrl.OrderStatus == "Cancel")
                    {
                        <tr class="table-danger">
                            <td id="orh_serial_no"></td>
                            <td>@orderSrl.OrderDate.ToShortDateString()</td>
                            <td>@orderSrl.OrderStatus</td>
                            <td>
                                <div style="cursor: not-allowed;">
                                    <a class="btn disabled btn-secondary">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr class="table-success">
                            <td id="orh_serial_no"></td>
                            <td>@orderSrl.OrderDate.ToShortDateString()</td>
                            <td>@orderSrl.OrderStatus</td>
                            <td>
                                <div>
                                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@orderSrl.Id">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No order arrived yet!</p>
    }
</div>


<script src="/js/serialize_table.js"></script>
