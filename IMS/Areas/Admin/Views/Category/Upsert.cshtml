@model IMS.Models.Models.Category

@{
    var title = "Add Category";
}

<form method="post" asp-action="Upsert">
    @if (Model.Category_Id != Guid.Empty)
    {
        title = "Edit Category";
        <input asp-for="Category_Id" hidden />
    }

    <div class="border p-3" style="margin-top:65px;">
        <div class="row form-group">
            <h2 class="text-info">@title</h2>
        </div>
        <br />
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Category_Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category_Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row pt-2">
                    <div class="col-8 offset-4 row">
                        <div class="col-4">
                            @if (Model.Category_Id == Guid.Empty)
                           {
                                <input type="submit" class="btn btn-info w-100" value="Create" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            }
                        </div>
                        <div class="col-4">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>