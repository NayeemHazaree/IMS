@model IMS.Models.Models.Category

<form method="post" asp-action="DeleteCat">

    <div class="border p-3" style="margin-top:65px;">
        <div class="row form-group">
            <h2 class="text-info">Delete Category</h2>
        </div>
        <br />
        <div class="row">
            <div class="col-8">
            <input asp-for="Category_Id" hidden />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Category_Name"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Category_Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row pt-2">
                    <div class="col-8 offset-4 row">
                        <div class="col-4">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col-4">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
