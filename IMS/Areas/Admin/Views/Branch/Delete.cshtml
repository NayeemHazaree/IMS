@model IMS.Models.Models.Branch

<form method="post" asp-action="Delete">

    <div class="border p-3" style="margin-top:65px;">
        <div class="row form-group">
            <h2 class="text-info">Delete Brand</h2>
        </div>
        <br />
        <div class="row">
            <input asp-for="BranchId" hidden />
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BranchName"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="BranchName" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label asp-for="BranchLoc"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="BranchLoc" class="form-control" />
                    </div>
                </div>
                <div class="form-group row pt-2">
                    <div class="col-8 offset-4 row">
                        <div class="col-4">
                            <input type="submit" class="btn btn-info w-100" value="Delete" />
                        </div>
                        <div class="col-4">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>