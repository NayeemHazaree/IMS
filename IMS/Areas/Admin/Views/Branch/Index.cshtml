@model IEnumerable<IMS.Models.Models.Branch>

<div class="border p-3" style="margin-top:65px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Branch List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="Upsert">Add New Branch</a>
        </div>
    </div>
    <br />
    <hr />
    @if (Model.Count() > 0)
    {
        <table class="table table-responsive table-hover table-bordered table-striped table-dark" style="text-align:center;">
            <thead>
                <tr>
                    <th scope="col">Serial No</th>
                    <th scope="col">Branch Name</th>
                    <th scope="col">Branch Location</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var br in Model)
                {
                        <tr class="table-danger">
                            <td></td>
                            <td>@br.BranchName</td>
                            <td>@br.BranchLoc</td>
                            <td>
                                <div class="row">
                                    <div class="col-6">
                                        <a class="btn btn-secondary" asp-action="Upsert" asp-route-id="@br.BranchId">Edit</a>
                                    </div>
                                    <div class="col-6">
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@br.BranchId">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Branch added yet!</p>
    }
</div>


<script src="/js/serialize_table.js"></script>