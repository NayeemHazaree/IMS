@model IEnumerable<IMS.Models.Models.MenuList>

<div class="border p-3" style="margin-top:65px;">
    <div class="row">
        <div class="col-6">
            <h2>Menu List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="Upsert">Add New Menu</a>
        </div>
    </div>
    <br />
    <hr />
    @if (Model.Count() > 0)
    {
        <table class="table table-responsive table-hover table-bordered table-striped table-dark" style="text-align:center;">
            <thead>
                <tr>
                    <th scope="col">Serial No</th>
                    <th scope="col">Area</th>
                    <th scope="col">Controller Name</th>
                    <th scope="col">Action Name</th>
                    <td scope="col">Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Menu_Id</td>
                        <td>@item.Area</td>
                        <td>@item.Controller_Name</td>
                        <td>@item.Action_Name</td>
                        <td>
                            <div class="row">
                                <div class="col-6">
                                    <a class="btn btn-secondary" asp-action="Upsert" asp-route-id="@item.Menu_Id">Edit</a>
                                </div>
                                <div class="col-6">
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Menu_Id">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Action found!</p>
    }
</div>

