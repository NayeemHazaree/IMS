@model IMS.Models.Models.MenuList

@{
    var title = "Add Menu";
}

<form method="post" asp-action="Upsert">
    @if (Model.Menu_Id != 0)
    {
        title = "Edit Menu";
        <input asp-for="Menu_Id" hidden />
    }

    <div class="border p-3" style="margin-top:65px;">
        <div class="row form-group">
            <h2 class="text-info">@title</h2>
        </div>
        <br />
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Area"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Area" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label asp-for="Controller_Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Controller_Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label asp-for="Action_Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Action_Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row pt-2">
                    <div class="col-8 offset-4 row">
                        <div class="col-4">
                            @if (Model.Menu_Id == 0)
                            {
                                <input type="submit" class="btn btn-info w-100" value="Create" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            }
                        </div>
                        <div class="col-4">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>