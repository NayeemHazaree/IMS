@model IEnumerable<IMS.Models.Models.Brand>

<div class="border p-3" style="margin-top:65px;">
    <div class="row">
        <div class="col-6">
            <h2>Brand List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="Upsert">Add New Brand</a>
        </div>
    </div>
    <br />
    <hr />
    @if (Model.Count() > 0)
    {
        <table class="table table-responsive table-hover table-bordered table-striped table-dark" style="text-align:center;">
            <thead>
                <tr>
                    <th scope="col">Serial No</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var br in Model)
                {
                    @if (br.Brand_Status == true)
                    {
                        <tr class="table-success">
                            <td id="cat_serial_no"></td>
                            <td>@br.Brand_Name</td>
                            <td>
                                <input type="checkbox" checked disabled>
                            </td>
                            <td>
                                <div class="row">
                                    <div class="col-6">
                                        <a class="btn btn-secondary" asp-action="Upsert" asp-route-id="@br.Brand_Id">Edit</a>
                                    </div>
                                    <div class="col-6">
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@br.Brand_Id">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr class="table-danger">
                            <td id="cat_serial_no"></td>
                            <td>@br.Brand_Name</td>
                            <td>
                                <input type="checkbox" disabled>
                            </td>
                            <td>
                                <div class="row">
                                    <div class="col-6">
                                        <a class="btn btn-secondary" asp-action="Upsert" asp-route-id="@br.Brand_Id">Edit</a>
                                    </div>
                                    <div class="col-6">
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@br.Brand_Id">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Brand added yet!</p>
    }
</div>


<script src="/js/serialize_table.js"></script>