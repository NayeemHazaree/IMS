@using IMS.Utility
@model IMS.Models.Models.Product

<div class="card col-md-4 mt-2 filter @Model.Category.Category_Name.Replace(' ','_')" style="width: 270px;margin-left:10px;">
    <img src="@WC.p_image_path@Model.ImgPath" style="height: 191px;object-fit: fill;image-rendering: pixelated;" class="card-img-top" alt="...">
    <div class="card-body">
        <div class="row">
            <div class="col-md-7">
                <strong class="card-title">@Model.Product_Name</strong>
            </div>
            <div class="col-md-5">
                <p class="card-text">
                    @Model.Product_Price <span style="font-size: 19px;font-family: none;">&#2547;</span>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <span class="badge border w-100" style="background-color:lavenderblush;color:darkblue">@Model.Brand.Brand_Name</span>
            </div>
            <div class="col-md-6">
                <span class="badge border w-100" style="background-color:aliceblue;color:darkblue">@Model.Category.Category_Name</span>
            </div>
        </div>
        <br />
        <p class="card-text" style="max-height: 100px;min-height: 100px;overflow: auto;">@Model.Product_Description</p>
        <a asp-action="ProductDetails" asp-route-id="@Model.Product_Id" class="btn btn-primary w-100">View Details</a>
    </div>
</div>