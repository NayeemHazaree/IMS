@model IMS.Models.ViewModels.AllProducts

    <div style="margin-top:65px;">
        <div class="text-center">
            <button class="btn btn-dark filter-button" data-filter="all">All</button>

            @foreach (var cat in Model.Categories)
            {
                <button class="btn btn-outline-secondary filter-button" data-filter="@cat.Category_Name.Replace(' ','_')">
                    @cat.Category_Name
                </button>
            }
        </div>

        <br />
        <div class="col-md-12">
            <div class="row">

                @foreach (var prod in Model.Products)
                {
                    <partial name="_ProductsCard" model="prod" />

                }
            </div>
        </div>
    </div>




@section Scripts{
    <script>
        $(document).ready(function () {
            $('.filter-button').click(function () {
                var value = $(this).attr('data-filter');
                if (value == 'all') {
                    $('.filter').show('1000');
                }
                else {
                    $('.filter').not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');
                }
            });
        });
    </script>
}